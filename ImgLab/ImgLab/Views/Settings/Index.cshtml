@model IEnumerable<ImgLab.SettingsDataModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Источники данных</h2>

@*<p>
    <a class="btn btn-default" OnClick="CreateModal()">Создать</a>
</p>*@
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th class="col-md-4"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-default" OnClick="EditModal(@item.Id)">Обновить</a>
                    <a class="btn btn-default" OnClick="DetailsModal(@item.Id)">Подробно</a>
                    <a class="btn btn-danger" OnClick="RemoveModal(@item.Id)">Удалить</a>
                </div>
            </td>
        </tr>

    }
    <tr>
        <td colspan="5"  data-toggle="tooltip" title="Добавить источник" data-placement="bottom"  OnClick="CreateModal()">
            <a class="center-block text-center">
                <span class="glyphicon glyphicon-plus" ></span>
            </a>
        </td>
    </tr>
</table>

<!-- Modal -->
<!-- Modal -->
<div id="modalid" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modaltitle" class="modal-title">Title</h4>
            </div>

            <div id="modalbody" class="modal-body">
                
            </div>
        </div>

    </div>
</div>



